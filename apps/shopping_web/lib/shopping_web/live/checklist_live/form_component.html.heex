<div>
<h2><%= @title %></h2>

<%=  form_for @changeset, "#",
  [id: "checklist-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save"], fn f -> %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
<% end %>
</div>